<%- include("partials/header") -%>

<div class="fullScreen">

    <section id="header">

        <h1 class="display-1 m-3 text-muted fw-bold"><%= studentName %></h1> <!--text-decoration-underline-->
        
        <h5 class="display-5 m-3 text-muted fw-bold"><%= classTitle %></h5>

    </section>
    

    <section id="list">

        <div class="container overflow-auto mt-5">
            <div class="row justify-content-center p-3">

                <form action="/classes/<%=classTitle%>/<%=studentName%>" method="post">
                    <% for (i = 0; i < studentActions.length; i++){ %>
                        <button type="submit" name="chosenAction" class="item btn btn-lg btn-light actionButton col-xs-10 col-md-5 col-lg-3" value="<%=studentActions[i].name%>">
                            <%= studentActions[i].name %>: <%= studentActions[i].count %>
                        </button>
                    <% } %>
                    <input type="hidden" name="classTitle" value="<%=classTitle%>"></input>
                    <input type="hidden" name="studentName" value="<%=studentName%>"></input>    
                </form>

            </div>
        </div>

    </section>


    <section id="modal">
        
        <button type="button" class="btn btn-lg btn-secondary addNewBtn mt-5 back-btn" onclick="history.back()" data-bs-toggle="" data-bs-target=""><i class="bi bi-skip-backward-fill"></i> Back</button>
        <button type="button" class="btn btn-lg btn-secondary addNewBtn mt-5" data-bs-toggle="modal" data-bs-target="#addNewAction">Add New Action</button>

        <div class="modal fade" id="addNewAction" tabindex="-1" aria-labelledby="addNewActionLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addNewActionLabel">Add New Action</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/newAction" method="post" class="addNew">
                        <div class="modal-body" method="post" class="addNew">
                            <div class="mb-3">
                                <label for="action-name" class="col-form-label">New Action:</label>
                                <input type="text" class="form-control" id="action-name" name="newAction" autocomplete="off">
                                <input type="hidden" name="classTitle" value="<%=classTitle%>"></input>
                                <input type="hidden" name="studentName" value="<%=studentName%>"></input>   
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" name="actionList" class="button btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>

</div>

<%- include("partials/footer") -%>