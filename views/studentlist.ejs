<%- include("partials/header") -%>

<div class="fullScreen">

    <section id="header">

        <h1 class="display-1 m-3 text-muted fw-bold"><%= classTitle %></h1> <!--text-decoration-underline-->
        
        <!-- <h5 class="display-5 m-3 text-muted fw-bold">Alex DiBuono</h5> -->

    </section>
    

    <section id="list">

        <div class="container overflow-auto mt-5">
            <div class="row justify-content-center p-3">
                <p class="m-0"><em> <%= noStudents %> </em></p>
                    <% for (i = 0; i < studentNames.length; i++){ %>
                        <a href="/classes/<%=classTitle%>/<%= studentNames[i].name %>" class="item col-xs-10 col-md-5 col-lg-3 mx-2 rounded bg-light fw-bold text-muted text-decoration-none">
                            <p> <%= studentNames[i].name %> </p>
                        </a>
                    <% } %>
            </div>
        </div>

    </section>


    <section id="modal">
    
        <button type="button" class="btn btn-lg btn-secondary addNewBtn mt-5" data-bs-toggle="modal" data-bs-target="#addNewStudent">Add New Student</button>

        <div class="modal fade" id="addNewStudent" tabindex="-1" aria-labelledby="addNewStudentLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addNewStudentLabel">Add New Student</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/studentlist" method="post" class="addNew">
                        <div class="modal-body" method="post" class="addNew">
                            <div class="mb-3">
                                <label for="student-name" class="col-form-label">New Student Name:</label>
                                <input type="text" class="form-control" id="student-name" name="newStudent" autocomplete="off">
                                <input type="hidden" name="classTitle" value="<%=classTitle%>"></input>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" name="studentList" class="button btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>

</div>

<%- include("partials/footer") -%>